<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.SitoManBoy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Typography -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.SitoManBoy.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.SitoManBoy.Button.Outlined</item>

        <!-- EditText styles -->
        <item name="editTextStyle">@style/Widget.SitoManBoy.EditText</item>

        <!-- Custom attributes -->
        <item name="cardViewStyle">@style/Widget.SitoManBoy.CardView</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.SitoManBoy.Splash" parent="Theme.SitoManBoy">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.SitoManBoy.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.SitoManBoy.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.SitoManBoy.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.SitoManBoy.Button.Small" parent="Widget.SitoManBoy.Button">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <!-- EditText Styles -->
    <style name="Widget.SitoManBoy.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/gray_medium</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <!-- CardView Styles -->
    <style name="Widget.SitoManBoy.CardView" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.SitoManBoy.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextAppearance.SitoManBoy.Subtitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TextAppearance.SitoManBoy.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.SitoManBoy.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.SitoManBoy.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Validation Styles -->
    <style name="Widget.SitoManBoy.EditText.Valid" parent="Widget.SitoManBoy.EditText">
        <item name="boxStrokeColor">@color/valid_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Widget.SitoManBoy.EditText.Invalid" parent="Widget.SitoManBoy.EditText">
        <item name="boxStrokeColor">@color/invalid_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Spinner Style -->
    <style name="Widget.SitoManBoy.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.SitoManBoy.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>
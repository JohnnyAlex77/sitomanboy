<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:supportsRtl="true"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ModulesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Módulo Repuestos -->
        <activity
            android:name=".repuesto.RepuestoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".repuesto.CrearRepuestoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".repuesto.ListaRepuestosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".repuesto.DetalleRepuestoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".repuesto.ModificarRepuestoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".repuesto.ConfirmarEliminacionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Módulo Sucursales -->
        <activity
            android:name=".sucursal.SucursalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Puedes agregar las demás actividades de sucursales aquí -->

    </application>

</manifest>
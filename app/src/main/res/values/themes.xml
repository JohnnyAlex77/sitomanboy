<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.SitoManBoy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">@color/text_primary</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.SitoManBoy.Button</item>
        <item name="editTextStyle">@style/Widget.SitoManBoy.EditText</item>

        <!-- AppCompat compatibility -->
        <item name="actionBarStyle">@style/Widget.SitoManBoy.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- ActionBar style -->
    <style name="Widget.SitoManBoy.ActionBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <!-- Dialog theme -->
    <style name="ThemeOverlay.SitoManBoy.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- NoActionBar theme for activities without toolbar -->
    <style name="Theme.SitoManBoy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen theme -->
    <style name="Theme.SitoManBoy.Fullscreen" parent="Theme.SitoManBoy.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
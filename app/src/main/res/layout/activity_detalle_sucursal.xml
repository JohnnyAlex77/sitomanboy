<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_sucursal_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@color/primary_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_codigo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_nombre"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_direccion"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"
            android:padding="8dp"
            android:background="@drawable/bg_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_total_repuestos"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvTotalRepuestos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_info"/>

        <!-- NUEVO: TextView para stock total -->
        <TextView
            android:id="@+id/tvTotalStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            android:background="@drawable/bg_info"/>

        <Button
            android:id="@+id/btnGestionInventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_gestion_inventario"
            android:background="@drawable/bg_button"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnModificarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_modificar"
            android:background="@drawable/bg_button"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnEliminarSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_eliminar"
            android:background="@drawable/bg_button_danger"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_volver"
            android:background="@drawable/bg_button_secondary"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>
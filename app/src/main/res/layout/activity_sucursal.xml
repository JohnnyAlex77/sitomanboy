<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sucursales_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/primary_color"/>

    <SearchView
        android:id="@+id/searchViewSucursales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_sucursal_hint"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSucursales"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/btnCrearSucursal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_crear_sucursal"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnListaSucursales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_lista_sucursales"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button"
        android:textAllCaps="false"/>

</LinearLayout>